<div class="container">

  <div class="cotisation-card">

    <div class="cotisation-card-header pt-3 d-flex justify-content-center align-items-center mt-3">
      <div class="back ml-2" style="width: 5%; text-align: center;">
        <a href="/dashboard"><i class="fas fa-long-arrow-alt-left"></i></a>
      </div>
      <div class="cotisation-title" style="width: 95%; text-align: center;">
        <h3>Détail de ton abonnement <%= @subscription.name %></h3>
      </div>
    </div>

    <div class="cotisation-card-body d-flex flex-wrap mt-3">
      <div class="cotisation-logo d-flex align-items-center justify-content-center" style="text-align: center; height: 180px;">
        <%= image_tag(@subscription.service.photo, height: '100', width: '200')%>
      </div>
      <div class="cotisation-infos py-3 pl-3">
        <div>
          <p><i class="fas fa-user"></i> <%= @subscription.user.first_name %></p>
          <p><i class="fas fa-tv"></i> <b>Abo :</b><%= @subscription.service.name %></p>
          <div class="password-subscription">
            <p><i class="fas fa-at"></i> <b>Identifiant : </b></p>
             <%= simple_form_for @subscription do |f|%>
                <%= f.input :identifiant, label: false, input_html: {value: @subscription.identifiant, type: "text", class: "input_password"} %>
              <% end %>
          </div>
          <div class="password-subscription">
            <p><i class="fas fa-fingerprint d-flex"></i><b>Mot de passe :</b></p>
            <%= simple_form_for @subscription do |f|%>
                <%= f.input :password, label: false, input_html: {value: @subscription.password, type: "text", class: "input_password"} %>
              <% end %>
          </div>
        </div>
      </div>
      <div class="cotisation-buttons py-3 pl-3 d-flex justify-content-center">
          <%= link_to "retirer l'abonnement", subscription_path(@subscription), method: :delete, class: 'btn btn-destroy' %> <br> <br>

      </div>
    </div>

    <div class="cotisation-card-footer mt-4">
      <h4 class="mb-4">Tes co-abonnés</h4>

      <div class="card-co-abo d-flex align-items-center justify-content-around mx-4">


          <% @subscription.cotisations.each do |cotisation| %>



            <div class="co-abos-card mb-3" style="text-align: center;">
              <% if cotisation.user.photo?  %>
                <%= image_tag(cotisation.user.photo) %>


              <% else %>
                <img class="avatar" src="https://i.pinimg.com/originals/51/f6/fb/51f6fb256629fc755b8870c801092942.png"/>
              <% end %>
              <br>
              <i><%= cotisation.user.first_name %>
                <%= link_to cotisation_path(cotisation), method: :delete do %>
                <i class="far fa-trash-alt"></i>
                <% end %>
               </i>
            </div>
          <% end %>
        </div>

      </div>
    </div>

  </div>

</div>
