<div class="container review-container mt-4" style="width: 600px; background-color: #F6F9FC; padding: 20px 20px; border-radius: 20px;   box-shadow: 0 2px 14px rgba(126,87,88,.1), 0 3px 6px rgba(0,0,0,.08);
">
  <div class="form-login">
    <div class="row"style=" text-align: center; margin: auto;">
      <div class="col-12 col-sm-offset-4 px-4">
        <h4>Votre avis sur l'abonnement de <%= @cotisation.subscription.user.first_name %></h4><br>
           <%= simple_form_for [@cotisation, @review] do |f| %>
                <%= f.input :content, label: 'Votre avis détaillé :' %>
                <%= f.input :rating, label: 'Votre note sur 5 :' %>
                <%= f.submit "Soumettre" %>
            <% end  %>
      </div>
    </div>
  </div>
</div>
