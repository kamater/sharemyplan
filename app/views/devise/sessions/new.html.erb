<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 right-signin px-4 py-3" style="background-color: #f6f9fc;">
    <h2>Connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs signin-form">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn btn-primary btn-hp my-3' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    <br>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 left-signin" style="background-color: #f6f9fc;">
    <%= image_tag "netflix-sign-in.jpg", width: '100%', alt: "login image" %>
  </div>
</div>
