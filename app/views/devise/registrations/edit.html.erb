<div class="container mt-3 mx-3 justify-content-center" style="background-color: white; border-radius: 10px;">
<h2 class="pt-3">Modification de votre profil</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Laissez ce champ blanc si vous ne souhaitez pas modifier votre mot de passe",
                required: false,
                input_html: { autocomplete: "Nouveau mot de passe" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "Nouveau mot de passe" } %>
    <%= f.input :current_password,
                hint: "Confirmez votre mot de passe actuel pour confirmer la modification",
                required: true,
                input_html: { autocomplete: "Mot de passe acrtuel" } %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: 'btn btn-hp' %>
  </div>
<% end %>

<h5 class="mt-3">Cancel my account</h5>

<p><%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back, class: 'pb-3'%>
<br>
</div>
