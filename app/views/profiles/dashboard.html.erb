<div class="container dashboard-container mt-3 mb-3">
<h2>Bienvenue dans votre dashboard <%= current_user.first_name %></h2>

<div class="dashboard-co-abonne py-3 mt-4">
  <div class=" top-div d-flex justify-content-between py-2">
    <h3>Vos abonnements en tant que co-abonnés</h3>
    <div><%= link_to 'Ajouter un abonnement', new_abonnement_path, class: 'btn btn-primary' %></div>
  </div>
  <% if current_user.abonnements.last != nil %>
    <div class="list-abonnement-proprio mt-3">
      <% @current_user.abonnements.each do |abonnement| %>
        <%= render '/shared/card-proprio', abonnement: abonnement %>
      <% end %>
    </div>
  <% else %>
    <p>Vous ne proposez aucun abonnement à la location</p>
  <% end %>
</div>

<div class="dashboard-locataire py-3 mt-4">
  <div class="top-div d-flex justify-content-between py-2">
    <h3>Vos abonnements en tant que locataire</h3>
    <div><%= link_to 'Réserver un nouveau abonnement', abonnements_path(@abonnements), class: 'btn btn-primary' %></div>
  </div>
  <% if current_user.rentals.last != nil %>
    <div class="list-abonnement-proprio mt-3">
      <% @current_user.rentals.each do |rental| %>
        <%= render '/shared/card-locataire', rental: rental %>
      <% end %>
    </div>
  <% else %>
    <p>Vous ne louez aucun abonnements !</p>
  <% end %>
</div>

</div>
